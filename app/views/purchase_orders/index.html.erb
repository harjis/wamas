<h1>Listing purchase_orders</h1>

<table>
  <tr>
    <th>Order number</th>
    <th>Completely arrived</th>
    <th>Completely invoiced</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchase_orders.each do |purchase_order| %>
  <tr>
    <td><%= purchase_order.order_number %></td>
    <td><%= purchase_order.completely_arrived %></td>
    <td><%= purchase_order.completely_invoiced %></td>
    <td><%= link_to 'Show', purchase_order %></td>
    <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
    <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Receive',  :controller => "purchase_orders", :action => "receive", :id => purchase_order %></td>
  </tr>
<% end %>
</table>

