    <td><%= sales_order_row.row_number %></td>
    <td><%= sales_order_row.order_quantity %></td>
    <td><%= sales_order_row.unit_price %></td>
    <td><%= sales_order_row.discount_percent %></td>
    <td><%= sales_order_row.discount_amount %></td>
