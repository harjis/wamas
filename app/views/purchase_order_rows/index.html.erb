<% @purchase_order_rows.each do |purchase_order_row| %>
  <tr>
    <td><%= purchase_order_row.name %></td>
    <td><%= purchase_order_row.row_number %></td>
    <td><%= purchase_order_row.order_quantity %></td>
    <td><%= purchase_order_row.unit_cost %></td>
    <td><%= purchase_order_row.line_amount %></td>
    <td><%= purchase_order_row.purchase_order %></td>
    <td><%= link_to 'Show', purchase_order_row %></td>
    <td><%= link_to 'Edit', edit_purchase_order_row_path(purchase_order_row) %></td>
    <td><%= link_to 'Destroy', purchase_order_row, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

